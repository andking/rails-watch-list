<div class="banner">
  <div class="container">
    <%# <h1>Watch list tracker</h1> %>
<div class="wrapper">
<h1>Watch list tracker</h1>
</div>
<p><i>Save any kind of movies</i></p>

      <%= link_to "Create a new list", new_list_path, class: "btn btn-gradient" %>

  </div>
</div>
</div>

<div class="container">
  <div class="row-index cards">
    <% @lists.each do |list| %>
      <div class="col-4-sm">
        <% if list.imageUrl.try(:empty?) %>
          <div class="card" style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.12) 0, rgba(0,0,0,0.55) 74.4%), url('https://images.unsplash.com/photo-1534489573486-7d1fa4f436e4?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80')">
            <h3><%= link_to list.name, list_path(list)%></h3>
          </div>
        <% else %>
          <div class="card" style= "background-image: linear-gradient(to bottom, rgba(255,255,255,0.12) 0, rgba(0,0,0,0.55) 74.4%), url('<%= list.imageUrl %>')">
          <h3><%= link_to list.name, list_path(list)%></h3>
        </div>
        <% end %>
        </div>
      <% end %>
    </div>
</div>
